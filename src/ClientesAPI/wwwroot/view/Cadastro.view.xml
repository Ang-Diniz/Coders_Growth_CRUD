<mvc:view 
controllerName="sap.ui.cliente.controller.Cadastro"
  	xmlns="sap.m"
  	xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
>  
	<Page title="{i18n>TituloPaginaDeCadastro}" binding= "{/cliente}" showNavButton="true" navButtonPress="aoClicarEmVoltar">
        <ToolbarSpacer/>
			<content>
				<Toolbar class="sapUiSmallMargin">
					<content>
					<ToolbarSpacer/>

						<Button icon="sap-icon://save" width="9%" text="{i18n>BotaoSalvar}" type="Emphasized"/>
						<Button icon="sap-icon://cancel" class="sapUiSmallMarginEnd" text="{i18n>BotaoCancelar}" type="Negative" press="aoClicarEmCancelar"/>

					</content>
				</Toolbar>
			</content>

	<l:VerticalLayout class="sapUiContentPadding" width="40%">

		<Label text="{i18n>LabelNome}" labelFor="inputNome"/>
		<Input id="inputNome" required="true" placeholder="{i18n>InputNome}"/>

        <Label text="{i18n>LabelEmail}" labelFor="inputEmail" />
		<Input id="inputEmail" required="true" placeholder="{i18n>InputEmail}" />

        <Label text="{i18n>LabelCPF}" labelFor="inputCPF" />
		<MaskInput mask="999.999.999-99" placeholderSymbol="_" id="inputCPF" required="true" placeholder="{i18n>InputCPF}"/>

        <Label text="{i18n>LabelDataDeNascimento}" labelFor="inputDataDeNascimento" />
		<DatePicker id="inputDataDeNascimento" required="true" placeholder="{i18n>InputDataDeNascimento}"/>

    </l:VerticalLayout>

    </Page>
</mvc:view> 
