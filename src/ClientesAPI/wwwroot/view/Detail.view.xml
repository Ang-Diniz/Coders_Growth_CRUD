<mvc:view 
	controllerName="sap.ui.cliente.controller.Detail"
  	xmlns="sap.m"
  	xmlns:mvc="sap.ui.core.mvc"
>  
	<Page title="{i18n>TituloPaginaDeDetalhes}" binding= "{/cliente}" showNavButton="true" navButtonPress="aoClicarEmVoltar" design="Bold">
		<ToolbarSpacer/>
			<content>
				<Toolbar class="sapUiSmallMargin">
					<content>
					<ToolbarSpacer/>

						<Button icon="sap-icon://user-edit" width="12%" text="{i18n>BotaoEditar}" type="Emphasized"/>
						<Button icon="sap-icon://delete" class="sapUiSmallMarginEnd" text="{i18n>BotaoRemover}" type="Negative"/>

					</content>
				</Toolbar>
			</content>
		<ObjectHeader
			title="{nome}">
			<ObjectAttribute text="E-mail :  {email}"/>
			<ObjectAttribute text="Cpf :  {cpf}"/>
			<ObjectAttribute text="Data de nascimento :  {path : 'dataDeNascimento', type : 'sap.ui.model.type.Date', formatOptions: {style : 'medium', source: {pattern: 'yyyy-MM-ddTHH:mm:ss.mmm'}}}"/>	
		</ObjectHeader>
	</Page>
</mvc:view>
