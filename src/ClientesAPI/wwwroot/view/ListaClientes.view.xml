<mvc:View 
   controllerName="sap.ui.cliente.controller.ListaClientes"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns:core="sap.ui.core">
   <App>
         <pages>
               <Page title="{i18n>TituloPagina}">
                  <Table id = "ListaClientes" items="{/cliente}">
                     <headerToolbar>
                        <Toolbar class="sapUiTinyMarginTop sapUiTinyMarginBottom">
                           <Button text="{i18n>BotaoCadastrar}" icon="sap-icon://add-employee" class="sapUiSmallMarginEnd" type="Unstyled"/>
                           <ToolbarSpacer/>
                           <SearchField width="50%"  placeholder="Buscar" search="buscarClientes"/>
                        </Toolbar>
                     </headerToolbar>
                        <columns> 
                           <Column
                              width="4em">
                              <Text text = "{i18n>colunaId}"/>
                           </Column>
                           <Column>
                              <Text text = "{i18n>colunaNome}"/>
                           </Column>
                           <Column>
                              <Text text = "{i18n>colunaEmail}"/>
                           </Column>
                           <Column>
                              <Text text = "{i18n>colunaCPF}"/>
                           </Column>
                           <Column>
                              <Text text = "{i18n>colunaDataDeNascimento}"/>
                           </Column>
                        </columns>
                        <items>
                           <ColumnListItem type="Navigation" press="aoClicarNaLinha">
                              <cells>
                                 <Text text = "{id}"/>
                                 <Text text = "{nome}"/>
                                 <Text text = "{email}"/>
                                 <Text text = "{cpf}"/>
                                 <Text text = "{path : 'dataDeNascimento', type : 'sap.ui.model.type.Date', formatOptions: {style : 'medium', source: {pattern: 'yyyy-MM-ddTHH:mm:ss.mmm'}}}"/>
                              </cells>
                           </ColumnListItem>
                        </items>
                  </Table>
               </Page>
         </pages>
   </App>
</mvc:View>
