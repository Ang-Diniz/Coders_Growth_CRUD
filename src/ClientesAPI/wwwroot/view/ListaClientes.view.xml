<mvc:View 
   controllerName="sap.ui.cliente.controller.ListaClientes"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns:core="sap.ui.core">
                    <Table id = "Tabelaclientes" items="{/cliente}">
                        <columns> 
                           <Column
                              width="4em">
                              <Text text = "{i18n>colunaId}"/>
                           </Column>
                           <Column>
                              <Text text = "{i18n>colunaNome}"/>
                           </Column>
                           <Column>
                              <Text text = "{i18n>colunaEmail}"/>
                           </Column>
                           <Column>
                              <Text text = "{i18n>colunaCPF}"/>
                           </Column>
                           <Column>
                              <Text text = "{i18n>colunaDataDeNascimento}"/>
                           </Column>
                        </columns>
                        <items>
                           <ColumnListItem>
                              <cells>
                                 <Text text = "{id}"/>
                                 <Text text = "{nome}"/>
                                 <Text text = "{email}"/>
                                 <Text text = "{cpf}"/>
                                 <Text text = "{path : 'dataDeNascimento', type : 'sap.ui.model.type.Date', formatOptions: {style : 'long', source: {pattern: 'yyyy-MM-ddTHH:mm:ss.mmm'}}}"/>
                              </cells>
                           </ColumnListItem>
                        </items>
                    </Table>
</mvc:View>
