<mvc:View 
   controllerName="sap.ui.cliente.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns:core="sap.ui.core">
<Shell>
   <App>
      <pages>
         <Page title="{i18n>TituloPagina}">
            <content>
               <Panel
                  headerText="{i18n>TituloPainel}"
                  class="sapUiResponsiveMargin"
						width="auto">
                  <content>
                     <Button
                        text="{i18n>BotaoCadastrar}"
                        icon="sap-icon://add"
                        class="sapUiSmallMarginEnd"/>
                     <Table id = "Tabelaclientes" items="{/cliente}">
                        <columns> 
                           <Column
                              width="6em">
                              <Text text = "{i18n>colunaId}"/>
                           </Column>
                           <Column>
                              <Text text = "{i18n>colunaNome}"/>
                           </Column>
                           <Column>
                              <Text text = "{i18n>colunaEmail}"/>
                           </Column>
                           <Column>
                              <Text text = "{i18n>colunaCPF}"/>
                           </Column>
                           <Column>
                              <Text text = "{i18n>colunaDataDeNascimento}"/>
                           </Column>
                        </columns>
                        <items>
                           <ColumnListItem>
                              <cells>
                                 <Text text = "{id}"/>
                                 <Text text = "{nome}"/>
                                 <Text text = "{email}"/>
                                 <Text text = "{cpf}"/>
                                 <Text text = "{dataDeNascimento}"/>
                              </cells>
                           </ColumnListItem>
                        </items>
                     </Table>
                  </content>
               </Panel>
            </content>
         </Page>
      </pages>
   </App>
</Shell>
</mvc:View>
