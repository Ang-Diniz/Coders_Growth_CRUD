<mvc:View xmlns:core="sap.ui.core"
   controllerName="sap.ui.cliente.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true">
  <Shell>
   <App>
      <pages>
         <Page title="{i18n>TituloPagina}">
            <content>
               <Panel
                  headerText="{i18n>TituloPainel}"
                  class="sapUiResponsiveMargin"
						width="auto">
                  <content>
                     <Button
                        text="{i18n>BotaoCadastrar}"
                        icon="sap-icon://add"
                        class="sapUiSmallMarginEnd"/>
                        <Table id = "Tabela">
                        <columns> 
                        <Column
                        width="4em">
                        <Text text = "Id"/>
                        </Column>
                        </columns>
                        <columns> 
                        <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        width="12em">
                        <Text text = "Nome"/>
                        </Column>
                        </columns> 
                        <columns> 
                        <Column
                        width="12em">
                        <Text text = "E-mail"/>
                        </Column>
                        </columns>
                        <columns> 
                        <Column
                        width="12em">
                        <Text text = "CPF"/>
                        </Column>
                        </columns>
                        <columns> 
                        <Column
                        width="12em">
                        <Text text = "Data de Nascimento"/>
                        </Column>
                        </columns>
                        </Table>
                  </content>
               </Panel>
            </content>
         </Page>
      </pages>
   </App>
   </Shell>
</mvc:View>
