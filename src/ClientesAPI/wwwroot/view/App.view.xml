<mvc:View 
   controllerName="sap.ui.cliente.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns:core="sap.ui.core"
   displayBlock="true">
<Shell>
   <App>
      <pages>
         <Page title="{i18n>TituloPagina}">
            <content>
               <Panel
                  headerText="{i18n>TituloPainel}"
                  class="sapUiResponsiveMargin"
						width="auto">
                  <content>
                     <Button
                        text="{i18n>BotaoCadastrar}"
                        icon="sap-icon://add-employee"
                        class="sapUiSmallMarginEnd"/>
                        <mvc:XMLView viewName="sap.ui.cliente.view.ListaClientes"/>
                  </content>
               </Panel>
            </content>
         </Page>
      </pages>
   </App>
</Shell>
</mvc:View>
