<mvc:view 
	controllerName="sap.ui.cliente.controller.Detalhes"
  	xmlns="sap.m"
  	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	  
	<Page title="{i18n>TituloPaginaDeDetalhes}"  titleAlignment="Center" binding= "{/cliente}" showNavButton="true" navButtonPress="aoClicarEmVoltar">
			<Panel 
            class="sapUiResponsiveMargin"
			width="auto">
				<Toolbar class="sapUiTinyMarginBottom">
						<Title text="{i18n>TituloPainelTelaDeDetalhes}"/>
						<core:Icon src="sap-icon://database"></core:Icon>
						<ToolbarSpacer/>
						<Button icon="sap-icon://user-edit" width="10%" text="{i18n>BotaoEditar}" type="Emphasized"/>
						<Button icon="sap-icon://delete" class="sapUiSmallMarginEnd" text="{i18n>BotaoRemover}" type="Negative"/>
				</Toolbar>
		</Panel>
		<ObjectHeader
			title="{nome}">
			<ObjectAttribute text="E-mail :  {email}"/>
			<ObjectAttribute text="Cpf :  {cpf}"/>
			<ObjectAttribute text="Data de nascimento :  {path : 'dataDeNascimento', type : 'sap.ui.model.type.Date', formatOptions: {style : 'medium', source: {pattern: 'yyyy-MM-ddTHH:mm:ss.mmm'}}}"/>	
		</ObjectHeader>
	</Page>
</mvc:view>
